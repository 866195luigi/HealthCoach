<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/journalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Screen 2"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/waterIntakeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/journalTextView"
        android:hint="Water Intake" />

    <Button
        android:id="@+id/addWaterIntakeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/waterIntakeEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/green_dark"
        android:text="Add Water Intake (ml)"
        android:textColor="@color/green_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Weight (kg)"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/addWaterIntakeButton"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/weightEditText2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter weight between 30 and 130"
        android:layout_below="@id/weightLabel"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/submitWeightButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weightEditText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/green_dark"
        android:text="Submit Weight"
        android:textColor="@color/green_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bodyFatLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Body Fat (%)"
        android:textSize="16sp"
        android:layout_below="@id/submitWeightButton2"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/bodyFatEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Enter BF percentage between 3% and 40%"
        android:layout_below="@id/bodyFatLabel"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/submitBodyFatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bodyFatEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/green_dark"
        android:text="Submit Body Fat"
        android:textColor="@color/green_light"
        android:textStyle="bold" />



</RelativeLayout>
